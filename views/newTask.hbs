<h2><center>New Task</center></h2>

{{#if err}}
<h5 style="color:red"> {{ err }}</h5>
{{/if}}

<form class="form-horizontal" action="/addtask" method="post">
    <div class="form-group">
      <label class="control-label col-sm-2" >Name:</label>
      <div class="col-sm-8">

      <select class="form-control" id="name" name="name">
        <option>(Select Name)</option>  
        <option value="Bob">Bob</option>
        <option value="Pingu">Pingu</option> 
        <option value="Tingu">Tingu</option>        
      </select>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Current Project or Task:</label>
      <div class="col-sm-8">

      <select class="form-control" id="taskName" name="taskName">
        <option>(Select Project)</option> 
        <option value="Cartoon">Cartoon</option>        
      </select>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Task Details:</label>
      <div class="col-sm-8">          
         <textarea class="form-control" rows="5" name="taskDetails" id="taskDetails"></textarea>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Working Today:</label>
      <div class="col-sm-8">          
         <select class="form-control" id="working" name="working">
        <option>(Select Name)</option>  
        <option value="yes">yes</option>
        <option value="no">no</option>       
      </select>
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-8">
        <button type="submit" class="btn btn-info">Save</button>
      </div>
    </div>
  </form>